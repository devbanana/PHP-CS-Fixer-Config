{
    "name": "devbanana/php-cs-fixer-config",
    "description": "Default rules for PHP CS Fixer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brandon Olivares",
            "email": "programmer2188@gmail.com",
            "homepage": "https://www.possiblepromise.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "friendsofphp/php-cs-fixer": "^3.0",
        "myclabs/php-enum": "^1.7"
    },
    "require-dev": {
        "rector/rector": "dev-main",
        "vimeo/psalm": "^4.10"
    },
    "autoload": {
        "psr-4": {
            "Devbanana\\FixerConfig\\": "src/"
        }
    },
    "scripts": {
        "build": [
            "composer install",
            "git checkout master src",
            "rector process",
            "php-cs-fixer fix --diff",
            "git add src",
            "git commit -m 'Updated to '$(git rev-parse --short master)"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    }
}
